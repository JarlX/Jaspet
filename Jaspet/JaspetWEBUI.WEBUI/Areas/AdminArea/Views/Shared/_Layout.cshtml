@using JaspetWEBUI.Helper.SessionHelper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Jaspet | Admin Panel</title>

    <!-- jQuery -->
    <script src="/AdminUI/plugins/jquery/jquery.min.js"></script>


    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/AdminUI/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/AdminUI/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="/AdminUI/plugins/ekko-lightbox/ekko-lightbox.css">

    <!-- DataTables -->
    <link rel="stylesheet" href="/AdminUI/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/AdminUI/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="/AdminUI/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

    <link href="/AdminUI/plugins/sweetalert2/sweetalert2.css" rel="stylesheet" />

</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/" role="button"><i class="fas fa-door-closed"></i></a>
                    </li>
            </ul>
            
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/AdminUI/index3.html" class="brand-link">
                <img src="/AdminUI/dist/img/jaspet.png" alt="JaspetLogo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Jaspet</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="/AdminUI/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@SessionManager.LoggedUser.FullName.ToUpper()</a>
                    </div>
                </div>



                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/AdminHome" class="nav-link">
                                <i class="nav-icon fa-solid fa-house-user"></i>
                                <p>Anasayfa</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Admin/Categories" class="nav-link">
                                <i class="nav-icon fas fa-list"></i>
                                <p>Kategoriler</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Products" class="nav-link">
                                <i class="nav-icon fas fa-bookmark"></i>
                                <p>Ürünler</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Users" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Kullancılar</p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewData["Title"]</h1>
                        </div>

                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <!--RAZOR-->
                @RenderBody()

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <small>Made By SCC</small>
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- Bootstrap 4 -->
    <script src="/AdminUI/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>


    <!-- DataTables  & Plugins -->
    <script src="/AdminUI/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/AdminUI/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/AdminUI/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/AdminUI/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/AdminUI/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/AdminUI/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/AdminUI/plugins/jszip/jszip.min.js"></script>
    <script src="/AdminUI/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/AdminUI/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/AdminUI/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/AdminUI/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/AdminUI/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="/AdminUI/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>


    <script src="/AdminUI/plugins/sweetalert2/sweetalert2.js"></script>
    <!-- AdminLTE App -->
    <script src="/AdminUI/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/AdminUI/dist/js/demo.js"></script>
    <script src="/AdminUI/plugins/ekko-lightbox/ekko-lightbox.min.js"></script>

</body>
</html>
<script>
    $(function () {
        bsCustomFileInput.init();
        $(document).on('click', '[data-toggle="lightbox"]', function (event) {
            event.preventDefault();
            $(this).ekkoLightbox({
                alwaysShowClose: true
            });
        });
    });
</script>